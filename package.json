{
    "name": "singleton-injection",
    "version": "2.0.0",
    "description": "A simple way to manage singletons in TypeScript projects",
    "repository": {
        "type": "git",
        "url": "git://github.com/HarshRohila/singleton-injection.git"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "test": "jest",
        "build": "tsc",
        "lint:check": "eslint . --ext .ts,.tsx",
        "lint": "npm run lint:check -- --fix",
        "_format": "prettier '**/*.{ts,tsx,json,md}'",
        "format": "npm run _format -- --write",
        "format:check": "npm run _format -- --list-different",
        "link-in-app": "ts-node --skipProject scripts/link-in-app.ts"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix"
        ],
        "*.{ts,tsx,json,md}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged -v"
        }
    },
    "author": "u/HarshRohila",
    "license": "MIT",
    "files": [
        "src/",
        "!src/test/",
        "dist/",
        "!dist/test/",
        "!dist/tsconfig.tsbuildinfo"
    ],
    "keywords": [
        "Singleton",
        "TypeScript",
        "Singleton Container",
        "Dependency Injection"
    ],
    "homepage": "https://github.com/HarshRohila/singleton-injection",
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/node": "^18.14.0",
        "@typescript-eslint/eslint-plugin": "^4.28.5",
        "@typescript-eslint/parser": "^4.28.5",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^4.3.8",
        "jest": "^29.5.0",
        "lint-staged": "^11.1.1",
        "prettier": "^2.3.2",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    }
}
